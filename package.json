{
  "name": "product-list-backend",
  "version": "1.0.0",
  "description": "Express backend with PostgreSQL for product list application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully!'",
    "init-db": "ts-node src/config/initDatabase.ts",
    "init-db-js": "node init-db.js",
    "test-api": "curl http://localhost:3002/health",
    "test-db": "curl http://localhost:3002/db-test",
    "test-products": "curl http://localhost:3002/api/products",
    "dev:full": "npm run init-db-js && npm run dev",
    "start:prod": "npm run build && npm start",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "@types/node": "^20.19.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/sqlite3": "^3.1.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "express",
    "postgresql",
    "products",
    "comments",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
